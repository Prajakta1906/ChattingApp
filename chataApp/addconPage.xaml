<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="chataApp.addconPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="20" Spacing="25" >
            <Entry x:Name="name" Placeholder="enter your name" />
            <Entry x:Name="num" Placeholder="enter your number" Keyboard="Numeric" />

            <Button x:Name="savebtn" Clicked="savebtn_Clicked"
                    BackgroundColor="pink" Text="save record"
                    TextColor="Black" Margin="50" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>